@model Admin

@{
    ViewData["Title"] = "Yönetici Sil";
}

<!--main content start-->
<section class="my-section">
    <section class="my-wrapper">
        <h3 class="content-title"><i class="fa fa-angle-right"></i> Yönetici Sil </h3>
        <!-- row -->
        <div class="row my-content">
            <div class="col-md-12">
                <div class="content-panel">
                    <div class="form-panel">
                        <form asp-controller="admin" asp-action="delete" class="form-horizontal style-form" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <b>@Model.Name.ToUpper() @Model.Surname.ToUpper()</b> isimli <b>@Model.UserName</b> kullanıcı adına ve <b>@Model.Role.ToUpper()</b> rolüne sahip yöneticiyi silmek istiyor musunuz?
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" class="btn btn-danger" value="Sil" />
                                <a asp-controller="admin" asp-action="list" class="btn btn-info">Geri Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
